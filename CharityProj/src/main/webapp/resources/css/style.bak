body {
	font-family: "Myriad Pro", Myriad, Helvetica, Arial, sans-serif;
	font-size: 90%;
	margin: 0px;
	line-height: 1.4em;
}

h1,h2,h3,h4,h5,h6 {
	font-family: Helvetica, Arial, sans-serif;
	font-size: 1.3em;
	font-weight: normal;
}

a:link,a:visited {
	text-decoration: none;
	font-size: .8em;
}

a:hover {
	border-bottom: 1px dotted #91476c;
}

a img {
	border: none;
}

header,section,article,footer {
	margin: 5px;
	border: 1px solid #e7e2d7;
}

header {
	display: block;
	position: relative;
	text-align: left;
	background: #666666;
}

header img {
	position: absolute;
	left: 20px;
	top: 18px;
}

header h1 {
	margin: 10px;
	font-size: 2.0em;
	font-weight: bold;
	text-align: left;
	color: white;
}

header h2 {
	margin: 10px;
	font-size: 1.2em;
	text-align: left;
	color: #c0c0c0;
	padding: 0px;
}

nav {
	padding: 10px 0px 10px 5px;
	background: #cccccc;
	text-align: left;
	display: block;
}

nav ul {
	padding: 0px;
	list-style-type: none;
	display: inline;
}

nav li {
	margin: 0px;
	list-style-type: none;
	display: inline;
}

nav a:link,nav a:visited {
	color: white;
	font-size: 1.2em;
	font-weight: normal;
	padding: 5px 10px;
	background: #666666;
	border-radius: 3px;
	-webkit-border-radius: .3em;
	-moz-border-radius: .3em;
}

nav a:hover {
	background: white;
	color: #4a4747;
}

section {
	text-align: left;
	padding: 0px;
}

section#MyGame {
	float: left;
	width: 180px;
}

section#JoinGame {
	float: right;
	width: 180px;
}

section h1,section h2,section h3,section h4,section h5,section h6 {
	background: #666666;
	padding: 5px 10px;
	margin: 0px;
	clear: both;
	font-size: 1.2em;
	color: white;
}

section ul {
	margin: 0px;
	padding: 0px;
	list-style: none;
	border-top: 1px solid #e7e2d7;
}

section li {
	margin: 0px;
	list-style: none;
}

section li a:link,section li a:visited {
	float: left;
	width: 160px;
	padding: 3px 10px;
	border-bottom: 1px solid #e7e2d7;
	display: block;
}

section li a:hover {
	background: #f2f1ec;
}

article {
	float: left;
	width: 520px;
	text-align: left;
	padding: 0px 10px 40px 10px;
}

article h1,h2,article h3,article h4,article h5,article h6 {
	background: #666666;
	padding: 10px;
	margin: 0px 0px 5px 0px;
}

footer {
	display: block;
	clear: both !important;
	text-align: center;
	background: #666666;
}

div.hidden {
	display: none;
}

p.success {
	color: blue;
}

p.error {
	color: red;
}

aside#gbLeft {
	float: left;
}

aside#gbRight {
	float: left;
}

div.gbMain {
	display: block;
	clear: both;
	float: left;
}

div.gbRow {
	display: block;
	clear: both;
}

div.gbTileX,div.gbTileO,div.gbTileE {
	float: left;
	display: block;
	text-align: center;
	vertical-align: middle;
	font-size: 2em;
	width: 50px;
	height: 50px;
	line-height: 50px;
	margin: 2px;
	border: 1px solid gray;
	border-radius: 5px;
	-webkit-border-radius: .4em;
	-moz-border-radius: .4em;
}

.inside {
	background: yellow;
}

div.gbTileX {
	color: red;
}

div.gbTileO {
	color: blue;
}